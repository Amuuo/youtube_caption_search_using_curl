        <Rectangle Fill="Crimson" Grid.Column="2" Grid.Row="3"/>
        <Rectangle Fill="DarkMagenta"  Grid.Column="2" Grid.Row="2"/>
        <Rectangle Fill="Gold" Grid.Column="3" Grid.Row="3"/>
        <Rectangle Fill="Cornsilk"  Grid.Column="3" Grid.Row="2"/>
        <Rectangle Fill="Coral"  Grid.Column="0" Grid.Row="2"/>
